<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ricardo.mybatis3.mapping.xml.CourseMapper">
	<resultMap type="com.ricardo.mybatis3.domain.Course" id="courseResult">
		<id property="id" column="course_id"/>
		<result property="name" column="name"/>
		<result property="description" column="description"/>
		<result property="start" column="start_date"/>
		<result property="end" column="end_date"/>
	</resultMap>
	
	<select id="searchCourse" parameterType="hashmap" resultMap="courseResult">
		select * from course where tutor_id=#{tutorId}
		<if test="courseName != null">
			and name like#{courseName}
		</if>
		<if test="startDate != null">
			and start_date >= #{startDate}
		</if>

		<if test="endDate != null">
			and end_date &lt;= #{endDate}
		</if>

	</select>
	

	<select id="searchCourse1" parameterType="hashmap" resultMap="courseResult">
		select * from course
		<choose>
			<when test="searchBy == 'Tutor'">
				where tutor_id=#{tutorId}
			</when>
			<when test="searchBy == 'CourseName'">
				Where name like #{courseName}
			</when>
			<otherwise>
				
			</otherwise>
		</choose>
	</select>
	
	<select id="searchCourse2" parameterType="hashmap" resultMap="courseResult">
		select * from course
		<where>
			<if test=" tutorId != null">
				tutor_id = #{tutorId}
			</if>
			<if test="courseName != null">
			and name like#{courseName}
			</if>
			<if test="startDate != null">
				and start_date >= #{startDate}
			</if>
	
			<if test="endDate != null">
				and end_date &lt;= #{endDate}
			</if>
		</where>
	</select>
	
	<select id="searchCourse3" parameterType="hashmap" resultMap="courseResult">
		select * from course
		<!-- 前缀加上“where” where后面跟着的(and 或者 (or会被override掉 -->
		<trim prefix="where" prefixOverrides="and | or" suffixOverrides=")">
			<if test=" tutorId != null">
				tutor_id = #{tutorId}
			</if>
			<if test="courseName != null">
				and name like#{courseName}
			</if>
			<if test="startDate != null">
				and start_date >= #{startDate}
			</if>
	
			<if test="endDate != null">
				and end_date &lt;= #{endDate}
			</if>		
		</trim>
	</select>


	<select id="searchCourse4" parameterType="hashmap" resultMap="courseResult">
		select * from course
		<if test="tutorIds != null">
		<where>
			<foreach item="tutorId" collection="tutorIds">
				or tutor_id=#{tutorId}
			</foreach>
		</where>
		</if>
	</select>
	
	<select id="searchCourse5" parameterType="hashmap" resultMap="courseResult">
		select * from course
		<if test="tutorIds != null">
		<where>
			tutor_id in
			<foreach item="tutorId" collection="tutorIds" open="(" separator="," close=")">
				#{tutorId}
			</foreach>
		</where>
		</if>
	</select>

	
	<update id="updateCourse"	parameterType="com.ricardo.mybatis3.domain.Course" >
		update students
		<set>
			<if test="name!=null">
				name like #{name},
			</if>
			<if test="description != null">
				description like #{description},
			</if>
		</set>
		where course_id = #{id}
	</update>



</mapper>